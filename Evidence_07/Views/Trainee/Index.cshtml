@model IEnumerable<Trainee>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12">
        <h1>List Of Trainees</h1>
        <div class="d-flex justify-content-end mb-1">
            <a class="btn btn-outline-primary btn-sm" asp-controller="Trainee" asp-action="Create"><i class="bi bi-plus"> Create Trainee</i></a>
        </div>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Trainee Name</th>
                    <th>Picture</th>
                    <th>E-mail</th>
                    <th>Training Location</th>
                    <th>Course Name</th>
                    <th>Edit / Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach(var t in Model)
                {
                <tr>
                    <td>@t.TraineeName</td>
                    <td><img class="rounded-circle" width="40" src="~/Uploads/@t.Picture" /></td>
                    <td>@t.Email</td>
                    <td>@t.TLocation</td>
                    <td>@t.Course.CourseName</td>
                    <td>
                        <a class="btn btn-secondary btn-sm" asp-controller="Trainee" asp-action="Edit" asp-route-id="@t.TraineeId"><i class="bi bi-pen"></i> Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Trainee" asp-action="Delete" asp-route-id="@t.TraineeId"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section styles {
<link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}

