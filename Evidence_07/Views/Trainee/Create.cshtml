@model TraineeViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <h2 class="offset-2">Create Trainee</h2>
        <form asp-controller="Trainee" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group row mb-1">
                <label asp-for="TraineeName" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="TraineeName" class="form-control" />
                    <span asp-validation-for="TraineeName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input type="file" asp-for="Picture" class="form-control" />

                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Email" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="TLocation" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input type="text" asp-for="TLocation" class="form-control" />
                    <span asp-validation-for="TLocation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="CourseId" class="col-form-label col-2"></label>
                <div class="col-6">
                    <select class="form-select" asp-for="CourseId" asp-items="@(new SelectList(ViewBag.CourseList, "CourseId", "CourseName"))">
                        <option value="">--Select--</option>
                    </select>
                    <input type="hidden" asp-for="CourseId" />
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-12 mt-2">
                <a asp-controller="Trainee" asp-action="Index"><i class="bi bi-arrow-left">Back to list</i></a>
            </div>
        </div>
    </div>
</div>
@section styles {
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validation/jquery.validate.js"></script>
    <script src="~/libs/validation/jquery.validate.unobtrusive.js"></script>
    <script>

        $.validator.addMethod("location",
            function (value, element, param) {

                if (value != "Dhaka" && value != "Chattagram"
                    && value != "Rajshahi") {
                    return false;
                }
                else {
                    return true;
                }
            });

        $.validator.unobtrusive.adapters.addBool("location");
    </script>
}

