@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-10 offset-2">
        <h2 style="color:blueviolet">Login Form</h2>
    </div>
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="offset-2 text-danger"></div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group row mb-1">
                <label asp-for="Username" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Password" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="form-group row mb-1">
                    
                    <div class="col-10 offset-2">
                        Create Account?<a class="btn btn-link fw-bold" asp-controller="Account" asp-action="Register">Register Now</a>
                    </div>
                    
                </div>
            </div>
        </form>
    </div>
</div>

