@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-10 offset-2">
        <h2 style="color:blueviolet">Register Form</h2>
    </div>
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="offset-2 text-danger"></div>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="form-group row mb-1">
                <label asp-for="Username" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Password" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Password" class="form-control" />
                    <div class="col-12 fw-lighter">
                        <span style="font-size:13px;"> [Hints:- Use Special Character, Capital-Small Letter and Numbers (#Aa12)]</span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="ConfirmPassword" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
