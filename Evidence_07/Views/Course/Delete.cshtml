@model Course
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-12 offset-2">
        <h2>Delete Course</h2>

        <div class="form-group row mb-1">
            <label asp-for="CourseName" class="col-form-label col-2"></label>
            <div class="col-6">
                @Model.CourseName
            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Round" class="col-form-label col-2"></label>
            <div class="col-6">
                @Model.Round
            </div>
        </div>

        <form asp-controller="Course" asp-action="Delete" method="post">
            <input type="hidden" asp-for="CourseId" />
            <div class="form-group row mb-1">
                @if (Model.Trainees.Any())
                {
                    <div class="col-12">
                        <button type="submit" class="btn btn-danger" disabled>Delete</button>
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                }

            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-12 mt-2">
            <a asp-controller="Course" asp-action="Index"><i class="bi bi-arrow-left">Back to list</i></a>
        </div>
    </div>
</div>
@section styles {
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validation/jquery.validate.js"></script>
    <script src="~/libs/validation/jquery.validate.unobtrusive.js"></script>

}

